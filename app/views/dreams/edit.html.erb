<div class="inner-wrapper">
    <h1>Edit <%= @dream.title %></h1>

  <%= form_for @dream do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :text, "Dream" %>
    <%= f.text_area :text %>

  	<%= f.label :date %>
    <%= f.text_field :date, value: @dream.date.strftime("%m/%d/%Y") %>

    <%= f.submit "Update" %>
    <% end %>

  <%= link_to 'Home', dreams_path %>
</div>
